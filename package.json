{
    "name": "angular-sandbox",
    "version": "0.0.1",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "build:prod": "ng build --prod",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:watchAll": "jest --watchAll",
        "pre-commit": "npm run prettier:quick && npm run lint && npm run test",
        "prettier": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,ts,json,html}\"",
        "prettier:quick": "pretty-quick --staged",
        "lint": "ng lint",
        "ci": "npm run lint && npm run test && npm run build:prod"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~7.2.0",
        "@angular/common": "~7.2.0",
        "@angular/compiler": "~7.2.0",
        "@angular/core": "~7.2.0",
        "@angular/forms": "~7.2.0",
        "@angular/platform-browser": "~7.2.0",
        "@angular/platform-browser-dynamic": "~7.2.0",
        "@angular/router": "~7.2.0",
        "@ngrx/effects": "^7.4.0",
        "@ngrx/store": "^7.4.0",
        "bulma": "^0.7.4",
        "core-js": "^2.5.4",
        "rxjs": "~6.3.3",
        "tslib": "^1.9.0",
        "zone.js": "~0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~15.0.4",
        "@angular/cli": "~7.3.8",
        "@angular/compiler-cli": "~7.2.0",
        "@angular/language-service": "~7.2.0",
        "@types/jest": "^24.0.12",
        "@types/node": "~8.9.4",
        "codelyzer": "~4.5.0",
        "husky": "^2.1.0",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "jest": "^24.7.1",
        "jest-marbles": "^2.3.1",
        "jest-preset-angular": "^7.1.0",
        "prettier": "^1.17.0",
        "pretty-quick": "^1.10.0",
        "ts-node": "~7.0.0",
        "tslint": "~5.11.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "~3.2.2"
    },
    "jest": {
        "preset": "jest-preset-angular",
        "setupFilesAfterEnv": [
            "<rootDir>/src/setupJest.ts"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!@ngrx)"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit"
        }
    }
}
